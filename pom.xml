<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.apache.cmueller.camel.sus</groupId>
    <artifactId>camel-in-daily-use</artifactId>
    <version>2.16.0-SNAPSHOT</version>
    <name>${project.groupId} : ${project.artifactId}</name>
    <packaging>pom</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <commons-io.version>2.4</commons-io.version>
        <junit.version>4.11</junit.version>
        <org.apache.activemq.version>5.11.1</org.apache.activemq.version>
        <org.apache.camel.version>2.16.0-SNAPSHOT</org.apache.camel.version>
        <org.apache.cxf.version>3.0.4</org.apache.cxf.version>
        <org.apache.derby.version>10.11.1.1</org.apache.derby.version>
        <org.apache.xbean.version>3.18</org.apache.xbean.version>
        <org.codehaus.jettison.jettison.version>1.3.7</org.codehaus.jettison.jettison.version>
        <org.slf4j.version>1.7.12</org.slf4j.version>
        <org.springframework.version>4.1.6.RELEASE</org.springframework.version>
    </properties>

    <modules>
        <module>common</module>
        <module>part-1</module>
        <module>part-2</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <compilerVersion>1.7</compilerVersion>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>